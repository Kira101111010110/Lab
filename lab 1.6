#include <stdio.h> 
#include <stdlib.h>

int GetMatrix(int *row, int *col) {
    printf("Enter the number of rows: ");
    scanf("%d", row);

    printf("Enter the number of columns: ");
    scanf("%d", col);

    int *matrixData = (int *)malloc((*row) * (*col) * sizeof(int));

    printf("Enter matrix elements:\n");
    for (int i = 0; i < *row; ++i) {
        for (int j = 0; j < *col; ++j) {
            printf("Element at [%d][%d]: ", i, j);
            scanf("%d", &matrixData[i * (*col) + j]);
        }
    }

    return matrixData;
}
